$('.question .question-error-<%= @question.id %>').html('<%= render 'shared/errors', resource: @question %>');

<% unless @question.errors.present? %>
  $('.question .q-title').text('<%=  @question.title %>');
  $('.question .q-body').text('<%= @question.body %>');
  $('form#edit-question-' + <%= @question.id %>).addClass('hidden');
  $('.edit-question-link').show()
<% end %>